- from flask import request
- from flask_login import current_user
- from gibela.helpers import body_tag_args

!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(httpEquiv="X-UA-Compatible", content="IE=edge,chrome=1")
    %title
      %%block(name="title")
      \- Gibela
    %meta(name='csrf-param', content='csrf_token')
    %meta(name='csrf-token', content=csrf_token())
    %meta(name="viewport", content="width=device-width, initial-scale=1.0")

    - for url in webassets('css'):
      %link(rel="stylesheet", href=url)

    %%block(name="extra_header_tags")

  %body(**body_tag_args())
    %header
      .navbar.navbar-default._navbar-fixed-top.navbar-inverse
        .container
          .navbar-header
            %a.navbar-brand(href="/") Gibela

            - if current_user.is_authenticated:

              - if current_user.has_role('rider'):

                - if 'rider' in request.url:

                  .navbar-nav.navbar-btn
                    %a.btn.btn-primary(href=url_for('new_ride'))
                      %i.fa.fa-plus
                      Request a ride!

                - if 'new_ride' in request.url:

                  .navbar-nav.navbar-btn
                    %a.btn.btn-primary(href=url_for('rider_dashboard'))
                      %i.fa.fa-arrow-left
                      Back to My Rides!

              %ul.nav.navbar-nav.navbar-right
                %li
                  %a.dropdown-toggle(href="#", dataToggle='dropdown')
                    &= current_user.full_name()
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a(href=url_for('rider_dashboard')) My Dashboard
                    %li
                      %a(href=url_for('security.logout')) Logout

    %%block(name='pre_content')

    .container
      -# show flash messages
      - for category, message in (get_flashed_messages(with_categories=True) or []):
        - category = 'info' if category == 'message' else category
        - category = 'danger' if category == 'error' else category
        %p.alert(class_="alert-" + category)
          &= message

      ${next.body()}

    %%include(file='_footer.haml')

    - for url in webassets('js'):
      %script(src=url)

    %%block(name="extra_javascript")
